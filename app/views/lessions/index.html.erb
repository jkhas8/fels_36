<% provide(:title, "Lessions|#{@category.name}") %>
<% if @lessions.any? %>
  <%= will_paginate %>
  <%= content_tag :ul, class: "lessions" do %>
    <%= render partial: "lession", collection: @lessions %>
  <% end %>
