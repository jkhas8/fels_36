<% provide(:title, 'Sign up') %>
<%= content_tag :h1, "Sign up" %>

<%= content_tag :div, class: "row" do %>
  <%= content_tag :div, class: "col-md-6 col-md-offset-3" do %>
    <%= form_for(@user) do |f| %>
      <%= render 'fields', f: f %>
      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  <% end %>
<% end %>
