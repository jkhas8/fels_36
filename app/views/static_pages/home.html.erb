<% if logged_in? %>
  <%= content_tag :div, class: "row" do %>
    <%= content_tag :aside, class: "col-md-4" do %>
      <%= content_tag :section, class: "user_info" do %>
        <%= render 'shared/user_info' %>
      <% end %>
      <%= content_tag :section, class: "stats" do %>
        <%= render 'shared/stats' %>
      <% end %>
    <% end %>
    <%= content_tag :div, class: "col-md-8" do %>
      <%= content_tag :div, class: "row center home-button" do %>
        <%= link_to "Words", words_path, class: "btn btn-lg btn-primary" %>
        <%= link_to "Lesson", categories_path, class: "btn btn-lg btn-primary" %>
      <% end %>
      <%= render 'shared/activities', activities: @activities,
        path: root_path(@user, page: @activities.next_page),
        text: "Activities Feed" %>
    <% end %>
  <% end %>
<% else %>
  <%= content_tag :div, class: "center jumbotron" do %>
    <%= content_tag :h1, "Welcome to the E-learner System" %>
    <%= content_tag :h2, "This is the home page for the E-learner System." %>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  <% end %>
<% end %>
