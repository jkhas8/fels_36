<%= content_tag :div, class: "fields" do %>
  <%= content_tag :div, class: "answer" do %>
    <%= f.label :content, "Answer" %>
    <%= f.text_field :content, class: 'form-control' %>
    <%= f.label :correct, class: "checkbox inline" do %>
      <%= f.check_box :correct, class: "inline-checkbox" %>
      <%= content_tag :span, "Correct answer?" %>
    <% end %>
    <%= link_to_remove_fields "remove", f %>
  <% end %>
<% end %>
