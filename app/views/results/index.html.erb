<% provide(:title, "Result|Lesson #{@lesson.id}") %>
<%= content_tag :div, class: "row" do %>
  <%= content_tag :h1, "Lesson #{@lesson.id}" %>
  <% if @lesson.learned %>
    <%= content_tag :div, class: "col-md-6 col-md-offset-3" do %>
      <%= content_tag :p,"Result: " +
         pluralize(@lesson.check_correct_answer, "correct answer"),
         class: "correct" %>
      <%= content_tag :ul, class: "words" do %>
        <%= content_tag :li do %>
          <%= content_tag :div, class: "content" do %>
            <%= content_tag :strong, "Question" %>
          <% end %>
          <%= content_tag :div, class: "meaning" do %>
            <%= content_tag :strong, "Your answer" %>
          <% end %>
        <% end %>
        <% @lesson.results.each do |result| %>
          <%= content_tag :li do %>
            <%= content_tag :div, class: "content" do %>
              <% if !result.answer.nil? && result.answer.correct? %>
                <%= content_tag :div, '', class: "true" %>
              <% else %>
                <%= content_tag :div, '', class: "wrong" %>
              <% end %>
              <%= content_tag :span, result.word.content %>
            <% end %>
            <%= content_tag :div, class: "meaning" do %>
              <%= content_tag :span,
                result.answer.nil? ? "" : result.answer.content %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% else %>
    <%= content_tag :h3, "Haven't learned yet." %>
  <% end %>
<% end %>
