<% @user ||= current_user %>
<%= content_tag :div, class: "stats" do %>
  <%= link_to user_followings_path @user do %>
    <%= content_tag :strong, id: "following", class: "stat" do %>
      <%= @user.following.count %>
    <% end %>
    following
  <% end %>
  <%= link_to user_followers_path @user do %>
    <%= content_tag :strong, id: "followers", class: "stat" do %>
      <%= @user.followers.count %>
    <% end %>
    followers
  <% end %>
<% end %>
<%= content_tag :div, class: "stats" do %>
  Learned  <%= pluralize(@user.learned_words.count, "word") %>
<% end %>
