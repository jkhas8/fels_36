<% provide(:title, "Lessons|#{@category.name}") %>
<%= content_tag :h1, "Your lessons in category #{@category.name}" %>
<% if @lessons.any? %>
  <%= will_paginate %>
  <%= content_tag :ul, class: "lessons" do %>
    <%= render partial: "lesson", collection: @lessons %>
  <% end %>
  <%= will_paginate %>
<% else %>
  You haven't started any lessons in this category yet.
<% end %>
