<%= content_tag :li do %>
  <%= link_to content_tag(:h3, category.name),
              category_lessons_path(category), class: "center" %>
  <%= content_tag :h2,
    "You've learned \
    #{category.words_learned_by(current_user).count}/#{category.words.count}" %>
  <%= content_tag :p, category.description %>
  <%= link_to 'Start', category_lessons_path(category), method: :post,
                       class: "btn btn-lg btn-primary" %>
  <% if current_user.admin? %>
    <%= content_tag :span, class: "admin" do %>
      <%= link_to "add word", new_admin_category_word_path(category),
                              class: "btn btn-sm btn-info"%>
      <%= link_to "edit", edit_admin_category_path(category),
                          class: "btn btn-sm btn-info"%>
      <%= link_to "delete", admin_category_path(category), method: :delete,
        data: {confirm: 'You sure?'},
        class: "btn btn-sm btn-danger" %>
    <% end %>
  <% end %>
<% end %>
