<li>
  <%= content_tag :h1, category.name %>
  <%= content_tag :h2,
    "You've learned \
    #{category.words_learned_by(current_user).count}/#{category.words.count}" %>
  <%= content_tag :p, category.description %>
  <%= link_to 'Start', '#', class: "btn btn-lg btn-primary" %>
  <% if current_user.admin? %>
    <%= link_to 'edit', edit_category_path(category) %>
    <%= link_to 'delete', category, method: :delete,
                                    data: {confirm: 'You sure?'} %>
  <% end %>
</li>
